<h1><%= @cat.name %></h1>

<form>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>

<table border="1px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Description</th>
      <th>Birth Day</th>
      <th>Sex</th>

    </tr>
  </thead>
  <tbody>

    <tr>
      <td> <%= @cat.name %> </td>
      <td> <%= @cat.color %> </td>
      <td> <%= @cat.description %> </td>
      <td> <%= @cat.birth_date %> </td>
      <td> <%= @cat.sex %> </td>

    </tr>

  </tbody>
</table>

<% if @cat.owner == current_user %>
  <%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>
<% end %>

<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order("start_date").each do |request| %>
    <%= render "request_tr", request: request %>
  <% end %>
</table>

<ul>

  <li><a href="<%= cats_url %>">Index</a></li>
  <li><a href="<%= edit_cat_url(@cat) %>">Edit</a></li>

</ul>
