<h1>Make a request for a cat!<h1>

<form action="<%= cat_rental_requests_url %>" method= "POST">
  <label for="cat_rental_request_cat_id">Cat</label>


  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <select name="cat_rental_request[cat_id]"
    id="cat_rental_request_cat_id"
    <option></option>
    <% Cat.all.each do |cat| %>
      <% selected = @request.cat_id == cat.id %>
      <option <%= selected ? "selected" : "" %>
        value="<%= cat.id %>">
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start Date</label>
  <input type= "date" name="cat_rental_request[start_date]"
    id="start_date" value="<%= @request.start_date %>">

  <label for="end_date">End Date</label>
  <input type= "date" name="cat_rental_request[end_date]"
    id="end_date" value="<%= @request.end_date %>">
  <br>

  <input type="submit" value="Submit a cat request!">

</form>
